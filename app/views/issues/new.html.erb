<script type="text/javascript">
$(document).ready(function() {

  $("#issue_subcategory").select2({
    theme: "bootstrap"
});
  $("#issue_category").select2({
    theme: "bootstrap"
});
  $("#issue_issuecat_ids").select2({
    theme: "bootstrap"
});
});

</script>
<div class="newsingle" >

<h2>New Issue</h2>
 
 
<%= simple_form_for @issue do |f| %>
	
	<%= f.input :category, collection: @category, value_method: :id, label_method: :issuecatname, label: false, prompt: "Main category" %>
	<%= f.input :subcategory, collection: @subcat, value_method: :id, label_method: :issuecatname, label: false, prompt: "Sub category", disabled: true %>
	

  <%= f.input :issuetitle, label: false, placeholder: "Title" %>


  <%= f.input :issuedescription, label: false, placeholder: "Description" %>

  <%= f.input :issueofficialview, label: false, placeholder: "Official view" %>

  <%= f.input :issuechart, input_html: {multipart: true, class: 'dropzone'} %>

  <%= f.input :imsource, label: false, placeholder: "Image Source (if required)" %>

  <%= f.input :officialoverride, label: "House override?" %>

  <%= f.association :issuecats, label_method: :issuecatname, value_method: :id, include_blank: false,collection: @subcatex, input_html: { class: 'multiselectuser'},label: "Select all other categories that apply" %>


  <%= f.button :submit, 'Add new issue' %>

<% end %>
</div>