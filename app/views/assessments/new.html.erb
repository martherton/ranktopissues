<script type="text/javascript">

$(document).ready(function() {

  $("#assessment_timing").select2({
    theme: "bootstrap"
});
  $("#assessment_magnitude").select2({
    theme: "bootstrap"
});
  $("#assessment_certainty").select2({
    theme: "bootstrap"
});

 
  
